                                        {
                                            @if (!Model.IChoose.Contains(Model.Entree[i].Ingredients[j]))
                                            {
                                                <li>@Model.Entree[i].Ingredients[j].ToString()</li>
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </p>
                        <p></p>
                    }
                </div>
            </div>

            <h2>Sides</h2>

            <div class="menu-item">
                <div class="row">
                    @for (int i = 0; i < Model.Side.Count; i++)
                    {
                        <p>
                            @Model.Side[i].ToString()
                            <ul>
                                <li>Price: @Model.Side[i].Price</li>
                                <li>Calories: @Model.Side[i].Calories</li>
                                <li>
                                    ingredients:
                                    <ul>
                                        @for (int j = 0; j < Model.Side[i].Ingredients.Count; j++)
                                        {
                                            @if (!Model.IChoose.Contains(Model.Side[i].Ingredients[j]))
                                            {
                                                <li>@Model.Side[i].Ingredients[j].ToString()</li>
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </p>
                        <p></p>
                    }
                </div>
            </div>

            <h2>Drinks</h2>

            <div class="menu-item">
                <div class="row">
                    @for (int i = 0; i < Model.Drink.Count; i++)
                    {
                        <p>
                            @Model.Drink[i].ToString()
                            <ul>
                                <li>Price: @Model.Drink[i].Price</li>
                                <li>Calories: @Model.Drink[i].Calories</li>
                                <li>
                                    ingredients:
                                    <ul>
                                        @for (int j = 0; j < Model.Drink[i].Ingredients.Count; j++)
                                        {
                                            @if (!Model.IChoose.Contains(Model.Drink[i].Ingredients[j]))
                                            {
                                                <li>@Model.Drink[i].Ingredients[j].ToString()</li>
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </p>
                        <p></p>
                    }
                </div>
            </div>
        </div>

        <form method="post">
            <input type="text" name="search" id="search" value="@Model.search" />
            <input type="submit" name="filter" id="filter" value="Search and Filter" />

            <h4>Menu Category</h4>
            <div class="checkbox-list">
                <label>
                    <input type="checkbox" name="MChoose" value="Combo" checked="@Model.MChoose.Contains("Combo")" />
                    Combo
                </label>
                <label>
                    <input type="checkbox" name="MChoose" value="Entree" checked="@Model.MChoose.Contains("Entree")" />
                    Entree
                </label>
                <label>
                    <input type="checkbox" name="MChoose" value="Side" checked="@Model.MChoose.Contains("Side")" />
                    Side
                </label>
                <label>
                    <input type="checkbox" name="MChoose" value="Drink" checked="@Model.MChoose.Contains("Drink")" />
                    Drink
                </label>

                <h4>Price Filter</h4>
                <label>
                    Minimum:
                    <input type="number" min="0" max="10" step="0.1" name="minIMDB" value="@Model.minIMDB" />
                </label>
                <label>
                    Maximum:
                    <input type="number" min="0" max="10" step="0.1" name="maxIMDB" value="@Model.maxIMDB" />
                </label>

                <h5>Ingredient Filter</h5>
                @foreach (string ingredient in Model.Ingre)
                {
                    <label>
                        <input type="checkbox" name="IChoose" value = "@ingredient.ToString()" />
                        @ingredient
                    </label>
                }


            </div>
        </form>
    </div>
