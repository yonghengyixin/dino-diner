@page
@model Website.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}
    <div class="content">
        <div class="menu">
            <h1>Menu</h1>

            <h2>Combos</h2>

            <div class="menu-item">
                <div class="row">
                    @for (int i = 0; i < Model.Combos.Count; i++)
                    {
                        <p>
                            @Model.Combos[i].ToString()
                            <ul>
                                <li>Drink: Cola Sodasaurus</li>
                                <li>Side: Fryceritops</li>
                                <li>Price: @Model.Combos[i].Price</li>
                                <li>Calories: @Model.Combos[i].Calories</li>
                                <li>
                                    ingredients:
                                    <ul>
                                        @for (int j = 0; j < Model.Combos[i].Ingredients.Count; j++)
                                        {
                                            @if (!Model.IChoose.Contains(Model.Combos[i].Ingredients[j]))
                                            {
                                                <li>@Model.Combos[i].Ingredients[j].ToString()</li>
                                            }
                                        }
                                    </ul>
                                </li>
                            </ul>
                        </p>
                        <p></p>
                    }
                </div>
            </div>

            <h2>Entree</h2>

            <div class="menu-item">
                <div class="row">
                    @for (int i = 0; i < Model.Entree.Count; i++)
                    {
                        <p>
                            @Model.Entree[i].ToString()
                            <ul>
                                <li>Price: @Model.Entree[i].Price</li>
                                <li>Calories: @Model.Entree[i].Calories</li>
                                <li>
